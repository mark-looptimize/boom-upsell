{
  "name": "@looptimize/in-cart-upsell",
  "version": "0.0.1",
  "description": "An in cart upsell feature designed for Boom by Cindy Joseph",
  "main": "index.js",
  "scripts": {
    "build:debug": "wireit",
    "build:prod": "wireit"
  },
  "wireit": {
    "build:typescript": {
      "command": "tsc --build --pretty",
      "clean": "if-file-deleted",
      "files": ["src/**/*.ts", "tsconfig.json"],
      "output": ["lib/**", ".tsbuildinfo"]
    },
    "build:debug": {
      "command": "esbuild lib/index.js --bundle --sourcemap --format=esm --outdir=dist",
      "files": [
        "lib/**/*.js"
      ],
      "output": [
        "dist/**/*.*"
      ],
      "dependencies": [
        "build:typescript"
      ]
    },
    "build:prod": {
      "command": "esbuild lib/index.js --bundle --minify --format=esm --outdir=dist",
      "files": [
        "lib/**/*.js"
      ],
      "output": [
        "dist/**/*.*"
      ],
      "dependencies": [
        "build:typescript"
      ]
    }
  },
  "author": "Looptimize",
  "license": "SEE LICENSE IN license.txt",
  "devDependencies": {
    "esbuild": "^0.17.18",
    "typescript": "^5.0.4",
    "wireit": "^0.9.5"
  }
}
